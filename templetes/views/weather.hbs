<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   {{>headerlink}}
</head>
<body>
  {{>navbar}}
   <div class="container -fluid main_header ">
    <div class="row">
         <div class="col-md-10 col-12 mx-auto" >
          <div class="main_content">
              <form class="temp_form">
                  <input type="text" id="cityName" placeholder="Enter Your city name" autocomplete="off">
                  <input type="submit" value="search" id="submitBtn">
              </form>
          </div>
          <div class="tempInformation">
              <div class="top_layer">
                  <p id="day">Tuesday</p>
                  <p id="today_data">13 Oct</p>
              </div>
                <div class="main_layer">
                    <p id="city_name">Get Output Here</p>
                    <div class="middle_layer data_hide">
                        <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                        <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                    </div>
                </div>
          </div>
         </div>
      </div>     
   </div>
   <!--footer-->
   {{>footer}}
   <script src="js/main.js"></script>
   <!--Display day-->
   <script>
      
       const getCurrentDay=()=>{
           let weekday=new Array(7);
           weekday[0]="Sunday";
           weekday[1]="Monday";
           weekday[2]="Tuesday";
           weekday[3]="Wednesday";
           weekday[4]="Thursday";
           weekday[5]="Friday";
           weekday[6]="Saturday";
           let currentTime=new Date();
         days=weekday[currentTime.getDay()];
         
           let day=document.getElementById('day');
            day.innerText=days;

      console.log();
       };
       getCurrentDay();
   </script>
   <!--Display date/month-->
   <script>
       var d =new Date();
       var month=d.getUTCMonth()+1;
       var day=d.getUTCDate();
       var year=d.getUTCFullYear();
       var hour=d.getHours();
       var minute=d.getMinutes();
       var second=d.getSeconds();
       var months=["","Jan","Feb","March","April","May","June","July","Aug","Sep","Oct","Nov","Dec"];
       var mon=document.getElementById('today_data');
       mon.innerText=hour+":"+minute+":"+second+"   "+day+" "+months[month];

   </script>
</body>
</html>